{
  "name": "go_tasker",
  "version": "1.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=apps/frontend... -- --host 0.0.0.0",
    "dev:no-frontend": "turbo run dev --filter=./packages/* --filter=./apps/* --filter=!./apps/frontend",
    "format:check": "turbo run format:check",
    "format:fix": "turbo run format:fix",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "packageManager": "bun@1.2.13",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "rimraf": "^6.0.1",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  }
}